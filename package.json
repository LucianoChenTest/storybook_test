    "babel-plugin-module-resolver": "^4.1.0",
    "dedent": "^0.7.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.4",
    "react-scripts": "4.0.1",
